<!DOCTYPE html>
<html>
  <head>
    <title>Ticketing System</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">
    <%= link_to 'Home', root_path %>
    <% if @current_customer.present? %>
      <% if @current_customer.admin? %>
        <%= link_to "All users", customers_path %>
      <% end %>
      <%= link_to "Create Mixtape", new_mixtape_path %>
      <%= link_to "Edit Profile", edit_customer_path %>
      <%= link_to "Sign out #{  @current_customer.email }", login_path, :method => 'delete' %>
    <% else %>
      <%= link_to 'Sign Up', new_customer_path %>
      <%= link_to 'Sign In', login_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
